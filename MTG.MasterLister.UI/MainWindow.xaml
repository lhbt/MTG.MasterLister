        <viewModels:MainViewModel />    
    </Window.DataContext>
    <Grid Height="Auto" VerticalAlignment="Top">
        <TextBox HorizontalAlignment="Left" Height="432" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="286"/>
